{
	"name": "webapp",
	"type": "module",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && ./scripts/postbuild.sh",
		"build:docker": "docker build -t provar-webapp:latest .",
		"preview": "vite preview",
		"preview:docker": "docker run -it --rm --env-file ./.env -p 5173:5173 provar-webapp:latest",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin=prettier-plugin-svelte . --check . & eslint .",
		"format": "prettier --plugin=prettier-plugin-svelte . --write . && eslint --fix .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"dependencies": {
		"@auth/core": "^0.18.0",
		"@auth/mongodb-adapter": "^2.0.3",
		"@auth/sveltekit": "^0.3.11",
		"@provar/provar-js": "^1.1.1",
		"mongodb": "^6.2.0",
		"nodemailer": "^6.9.7",
		"tslib": "^2.6.2"
	},
	"devDependencies": {
		"@playwright/test": "^1.39.0",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.27.3",
		"@typescript-eslint/eslint-plugin": "^6.10.0",
		"@typescript-eslint/parser": "^6.10.0",
		"@vitest/coverage-v8": "^0.34.6",
		"autoprefixer": "^10.4.16",
		"eslint": "^8.53.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.35.0",
		"flowbite": "^2.0.0",
		"flowbite-svelte": "^0.44.19",
		"flowbite-svelte-blocks": "^0.5.1",
		"flowbite-svelte-icons": "^0.4.5",
		"postcss": "^8.4.31",
		"postcss-load-config": "^4.0.1",
		"prettier": "^3.1.0",
		"prettier-plugin-svelte": "^3.0.3",
		"svelte": "^4.2.5",
		"svelte-check": "^3.5.2",
		"tailwind-merge": "^2.0.0",
		"tailwindcss": "^3.3.5",
		"typescript": "^5.2.2",
		"vite": "^4.5.0",
		"vitest": "^0.34.6"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
