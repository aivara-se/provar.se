{
	"name": "webapp",
	"type": "module",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && ./scripts/postbuild.sh",
		"build:docker": "docker build -t provar-webapp:latest .",
		"preview": "vite preview",
		"preview:docker": "docker run -it --rm --env-file ./.env -p 5173:5173 provar-webapp:latest",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin=prettier-plugin-svelte . --check . & eslint .",
		"format": "prettier --plugin=prettier-plugin-svelte . --write . && eslint --fix .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"dependencies": {
		"@auth/core": "^0.18.6",
		"@auth/mongodb-adapter": "^2.0.7",
		"@auth/sveltekit": "^0.3.12",
		"@google-cloud/storage": "^7.7.0",
		"@provar/provar-js": "^1.1.1",
		"mongodb": "^6.3.0",
		"nodemailer": "^6.9.7",
		"tslib": "^2.6.2"
	},
	"devDependencies": {
		"@playwright/test": "^1.40.0",
		"@sveltejs/adapter-node": "^2.0.0",
		"@sveltejs/kit": "^2.0.2",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/nodemailer": "^6.4.14",
		"@typescript-eslint/eslint-plugin": "^6.13.2",
		"@typescript-eslint/parser": "^6.12.0",
		"@vitest/coverage-v8": "^0.34.6",
		"autoprefixer": "^10.4.16",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.35.1",
		"flowbite": "^2.1.1",
		"flowbite-svelte": "^0.44.20",
		"flowbite-svelte-blocks": "^0.5.1",
		"flowbite-svelte-icons": "^0.4.5",
		"postcss": "^8.4.31",
		"postcss-load-config": "^5.0.2",
		"prettier": "^3.1.0",
		"prettier-plugin-svelte": "^3.1.1",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.2",
		"tailwind-merge": "^2.0.0",
		"tailwindcss": "^3.3.5",
		"typescript": "^5.3.3",
		"vite": "^5.0.10",
		"vitest": "^1.0.0"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
