FROM node:20-alpine

WORKDIR /app
COPY ./build ./
COPY ./node_modules ./node_modules

ENV AUTH_EMAIL_FROM=""
ENV AUTH_EMAIL_SERVER=""
ENV AUTH_GITHUB_ID=""
ENV AUTH_GITHUB_SECRET=""
ENV AUTH_GOOGLE_ID=""
ENV AUTH_GOOGLE_SECRET=""
ENV AUTH_SECRET=""
ENV MONGODB_URL=""
ENV NODE_ENV=production
ENV PORT=8080

EXPOSE 8080

ENTRYPOINT ["node","./index.js"]
