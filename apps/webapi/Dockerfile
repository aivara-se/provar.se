FROM alpine:3
RUN apk add ca-certificates
WORKDIR /app
COPY ./webapi ./
COPY ./public ./

ENV AUTH_GITHUB_ID=""
ENV AUTH_GITHUB_SECRET=""
ENV AUTH_GOOGLE_ID=""
ENV AUTH_GOOGLE_SECRET=""
ENV AUTH_SECRET=""
ENV DATABASE_URI=""
ENV EMAIL_FROM=""
ENV EMAIL_SERVER=""
ENV GEOLITE2_DB=""
ENV PROVAR_API_URL=""
ENV PROVAR_APP_URL=""
ENV PORT=3001

EXPOSE 3001

ENTRYPOINT ["/app/webapi"]
