{
  "name": "webapi",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "air -c .air.toml",
    "setup": "go get .",
    "build": "GOOS=linux GOARCH=amd64 go build -o ./webapi",
    "build:swagger": "swag init",
    "build:docker": "docker build -t provar-webapi:latest .",
    "preview": "./webapi",
    "preview:docker": "docker run -it --rm --env-file ./.env -p 3001:3001 provar-webapi:latest",
    "format": "go fmt ./...",
    "check": "go vet ./...",
    "lint": "test -z \"$(gofmt -l .)\"",
    "test:integration": "echo TODO",
    "test:unit": "go test ./..."
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
